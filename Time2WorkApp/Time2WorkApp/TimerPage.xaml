<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Time2WorkApp.TimerPage">
    <ScrollView>
        <StackLayout 
            x:Name="mainStackLayout"
            Margin="20, 10, 20, 20">
            <Label
                x:Name="datumVanVandaag"
                HorizontalOptions="Center"
                FontSize="25"
                Text="Datum"
                TextColor="LightSalmon"/>

            <Button x:Name="startTimeButton"
                HeightRequest="75"
                Text="Begin met Werken"
                FontSize="25"
                BackgroundColor="ForestGreen"
                TextColor="White"
                Clicked="startTimeButton_Clicked"/>

            <Label x:Name="beginWerkTijdLabel"
                   Text="Begin tijd: "
                   HorizontalOptions="Center"
                   IsVisible="False"/>

            <Label x:Name="starttimeLabel"
            Text="00:00:00"
            FontSize="75"
            HorizontalOptions="Center"/>

            <Button x:Name="pauseTimeButton"
                HeightRequest="75"
                Text="Begin Pauze"
                FontSize="25"
                BackgroundColor="Gray"
                TextColor="White"
                Clicked="pauseTimeButton_Clicked"
                IsEnabled="false"/>

            <Label x:Name="beginPauzeTijdLabel"
                   Text="Begin datum en tijd: "
                   HorizontalOptions="Center"
                   IsVisible="False"/>

            <Label x:Name="pauseTimerLabel"
            Text="00:00:00"
            FontSize="75"
            HorizontalOptions="Center"/>



            <Picker x:Name="MyPicker"    
                    Title="Kies Activiteit"
                    SelectedIndexChanged="MyPicker_Clicked"
                    />

            <Label x:Name="activityIsUpdatedLabel"
               Text="Huidig activiteit: "
               HorizontalOptions="Center"
               TextColor="White"
               BackgroundColor="LightGreen"
               IsVisible="False"
               />

            
        </StackLayout>
    </ScrollView>
</ContentPage>