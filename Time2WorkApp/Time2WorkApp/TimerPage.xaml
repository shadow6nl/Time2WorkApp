<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Time2WorkApp.TimerPage">
    <ScrollView>
    <StackLayout Margin="20, 10, 20, 20">
        <Button x:Name="startTimeButton"
                HeightRequest="75"
                Text="Begin met Werken"
                FontSize="25"
                BackgroundColor="ForestGreen"
                TextColor="White"/>

        <Label x:Name="starttimeLabel"
            Text="00:00:00"
            FontSize="75"
            HorizontalOptions="Center"/>

        <Button x:Name="pauseTimeButton"
                HeightRequest="75"
                Text="Start Pauze"
                FontSize="25"
                BackgroundColor="DarkOrange"
                TextColor="White"/>

        <Label x:Name="pauseTimerLabel"
            Text="00:00:00"
            FontSize="75"
            HorizontalOptions="Center"/>

        <RelativeLayout >
                <StackLayout
                    HorizontalOptions="Start">
                    <Switch
                        x:Name="activitySwitch"
                        HorizontalOptions="Start"/>    
                </StackLayout>
                <StackLayout>
                    <Label Text="Activiteit"
                       x:Name="topBox" 
                       FontSize="35"
                       HorizontalOptions="EndAndExpand"
                       Margin="190, 0, 0, 0"/>    
                </StackLayout>

        </RelativeLayout>
        <Entry x:Name="activityName"
               Placeholder="Waar bent u mee bezig?"
               HorizontalOptions="Center"
               IsVisible="True"/>

        <Button x:Name="updateActivityButton"
                HeightRequest="35"
                Text="Start Pauze"
                FontSize="10"
                BackgroundColor="Gray"
                TextColor="White"/>
        
        <Label x:Name="activityIsUpdatedLabel"
               Text="Huidig activiteit: "
               HorizontalOptions="Center"
               TextColor="White"
               BackgroundColor="Green"
               IsVisible="True"
               />

            <Button x:Name="stopTimeButton"
                HeightRequest="75"
                Text="Stop met Werken"
                FontSize="25"
                BackgroundColor="Red"
                TextColor="White"/>
        </StackLayout>
    </ScrollView>
</ContentPage>