<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Time2WorkApp.OptionsPage">
    <ContentPage.Content>
        <StackLayout 
                     Margin="20">
            <Label Text="Welkom op de opties pagina. Hier kunt u, uw wachtwoord aanpassen of de gehele app reseten. Let wel op als u een Factory reset uitvoerd bent u al u voorafgaande gegevens kwijt."
                   FontSize="15"
                   Margin="0,0,0, 50"
                   TextColor="Black"
                   FontAttributes="Bold"
                />

            <StackLayout
                VerticalOptions="Center">
                <Button x:Name="resetPassword"
                    Text="Nieuw wachtwoord"
                    BackgroundColor="Red"
                    Clicked="ResetPassword_Clicked"/>
                <Button x:Name="ResetFirstTimeSetup"
                    Text="Factory Reset!"
                    BackgroundColor="Red"
                    Clicked="ResetFirstTimeSetup_Clicked"/>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>