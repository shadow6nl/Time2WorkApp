<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Time2WorkApp.OptionsPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" 
                     Margin="20">
            <Label Text="welkom op de opties pagina.
                         Hier kunt u, uw wachtwoord aanpassen of de gehele app reseten.
                         let wel op als u een Factory reset uitvoerd bent u al u voorafgaande gegevens kwijt."
                   FontSize="10"
                />
            <Button x:Name="resetPassword"
                    Text="Nieuw wachtwoord"
                    BackgroundColor="Red"
                    Clicked="ResetPassword_Clicked"/>
            <Button x:Name="ResetFirstTimeSetup"
                    Text="Factory Reset!"
                    BackgroundColor="Red"
                    Clicked="ResetFirstTimeSetup_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>