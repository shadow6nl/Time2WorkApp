<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Time2WorkApp.NewPasswordPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center"
                     Margin="20">
            <Label Text="Voer hier uw gegevens in:"
                   FontSize="25"/>
            <Entry
                x:Name="oldPassword"
                Placeholder="Uw oude wachtwoord"
                IsPassword="True"/>
            <Entry
                x:Name="newPassword1"
                Placeholder="Uw nieuwe wachtwoord"
                IsPassword="True"/>
            <Entry
                x:Name="newPassword2"
                Placeholder="Nog een keer uw nieuwe wachtwoord"
                IsPassword="True"/>
            <Button
                x:Name="NewPasswordSaveButton"
                Margin="0, 20, 0, 0"
                Text="Opslaan"
                Style="{StaticResource normalButton}"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>